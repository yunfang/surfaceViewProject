<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <!--
    <RelativeLayout
        android:id="@+id/rl_gift_img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/"
        android:layout_centerHorizontal="true"
        android:visibility="gone" >

    </RelativeLayout>
    -->

    <ImageView
        android:id="@+id/iv_gift_multiple_img"
        android:layout_width="wrap_content"
        android:layout_height="90dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/winning_1000_multiple_coin" />

    <RelativeLayout
        android:id="@+id/rl_send_gift_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gift_multiple_img"
        android:layout_centerHorizontal="true"
        android:background="@drawable/winning_10_mulriple_orange"
        android:paddingBottom="5dip" >

        <TextView
            android:id="@+id/tv_from_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="吴彦祖吴彦祖"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_user_icon_first"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dip"
            android:layout_toLeftOf="@id/tv_from_user_name"
            />

        <ImageView
            android:id="@+id/iv_user_icon_second"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dip"
            android:layout_toLeftOf="@id/iv_user_icon_first"
            />

        <TextView
            android:id="@+id/tv_send_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_from_user_name"
            android:gravity="bottom"
            android:text="送"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_gift_img"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="3dip"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/tv_send_label"
           />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_winning_multiple"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_alignBottom="@id/iv_gift_multiple_img"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-8dip"
        android:src="@drawable/winning_return_1000_mulriple" />

</RelativeLayout>